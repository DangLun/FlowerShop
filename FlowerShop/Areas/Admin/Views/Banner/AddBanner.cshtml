@model FlowerShop.ViewModels.BannerViewModel

@{
    ViewBag.Title = "AddBanner";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddBanner", "Banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-horizontal">
        <div class="card shadow-sm mt-2 mx-3">
            <div class="card-body">
                <h4><i class="fa-solid fa-sliders text-success"></i> Thêm Banner</h4>
            </div>
        </div>
        <div class="card mt-4 shadow-sm mx-3">
            <div class="card-body">
                <h3 class="text-center text-success">Thông tin chủ đề</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.BannerPictureFile, "Chọn ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.BannerPictureFile, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BannerPictureFile, "", new { @class = "text-danger" })
                </div>
            </div>

                <div class="d-flex align-items-center gap-3 mt-3">
                    <div>
                        @Html.ActionLink("Trở về", "Index", "", new { @class = "btn btn-primary" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thực hiện thêm" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
