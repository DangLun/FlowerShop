@model FlowerShop.Models.Topic

@{
    ViewBag.Title = "ThemCD";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <div class="card shadow-sm mt-2 mx-3">
        <div class="card-body">
            <h4><i class="fa-solid fa-plus text-success"></i> Thêm Chủ đề</h4>
        </div>
    </div>
    <div class="card mt-4 shadow-sm mx-3">
        <div class="card-body">
            <h3 class="text-center text-success">Thông tin chủ đề</h3>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.TopicName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 mt-2">
                    @Html.EditorFor(model => model.TopicName, new { htmlAttributes = new { @class = "form-control", @placeholder ="Nhập tên chủ đề" } })
                    @Html.ValidationMessageFor(model => model.TopicName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="d-flex align-items-center gap-3 mt-3">
                <div>
                    @Html.ActionLink("Trở về", "ContentCD", "", new {@class="btn btn-primary"})
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thực hiện thêm" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
}


